{
    # Global options
    email admin@builders-tech.com
    # Disable auto-https for local/IP testing
    auto_https off
}

:80 {
    # Reverse proxy    # API -> backend
    handle /api/* {
        reverse_proxy backend:3002
    }

    # Admin UI -> frontend
    handle /admin-new/* {
        reverse_proxy frontend:5173
    }

    # Enable gzip compression
    encode gzip

    log {
        output stdout
        format json
    }
}
