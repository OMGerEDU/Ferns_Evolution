{
    # Global options
    email admin@builders-tech.com
    # Disable auto-https for local/IP testing
    auto_https off
}

:80 {
    # Reverse proxy to our backend service
    reverse_proxy backend:3002 {
        header_up Host {http.request.host}
        header_up X-Real-IP {remote_host}
    }

    # Enable gzip compression
    encode gzip

    log {
        output stdout
        format json
    }
}