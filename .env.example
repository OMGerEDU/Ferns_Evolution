# Evolution Backend - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Backend Service Configuration
# ============================================

# API Key for accessing this backend service
# Generate a strong random key: openssl rand -hex 32
API_KEY=your-backend-api-key-here

# ============================================
# Evolution API Configuration
# ============================================

# API Key for Evolution API (WhatsApp Gateway)
# This key secures access to the WhatsApp API
EVOLUTION_API_KEY=your-evolution-api-key-here

# ============================================
# Webhook Configuration
# ============================================

# URL where Evolution sends webhook events (your AdminPanel)
# Example: https://your-admin-panel.vercel.app/api/webhooks/evolution
WEBHOOK_GLOBAL_URL=https://your-saas.vercel.app/api/webhooks/evolution

# Enable global webhooks
WEBHOOK_GLOBAL_ENABLED=true

# Target URL for webhook relay from backend (if different from above)
WEBHOOK_TARGET_URL=https://your-saas.vercel.app/api/webhooks/evolution

# Secret for HMAC webhook signing (optional but recommended)
WEBHOOK_SECRET=your-webhook-signing-secret

# ============================================
# Database Configuration
# ============================================

# PostgreSQL password (for local Docker setup)
# In production, use a strong random password
POSTGRES_PASSWORD=evolution_password

# ============================================
# Optional: Production Settings
# ============================================

# Node environment
# NODE_ENV=production

# Port (default 3000)
# PORT=3000

# Health check interval in milliseconds (default 60000 = 1 minute)
# HEALTH_CHECK_INTERVAL=60000
